---
import Boilerplate from "../layouts/Boilerplate.astro";
import HeaderNavBar from "../components/HeaderNavBar.astro";
---

<Boilerplate title="Home">
	<body>
		<HeaderNavBar color="dark" rightTabs={[{ slug: "/about", tag: "About" }, { slug: "/contribute", tag: "Contribute" }]} />
		<main>
			<h1>Welcome to ACSdemy!</h1>
			<p>The unofficial repository of study notes from ACS Jakarta. Study at your own risk with our available resources down below:</p>

			<div id="link-wrapper">
				<a href="/igcse/">IGCSE Resources</a>
				<a href="/ib/">IB Resources</a>
			</div>
		</main>
	</body>
</Boilerplate>

<style>

	body {
		background-color: var(--highlight-color);
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

    main {
        width: 60vw;
		margin: 0 auto 50px;
		background-color: var(--highlight-color);

		display: flex;
		flex: 1;
		flex-direction: column;
		align-items: center;
		justify-content: center;
    }

	h1 {
		color: var(--primary-background-color);
        font-family: "Harmonia Sans";
		font-size: 80px;
		text-align: center;
		margin-bottom: 42px;

		text-decoration-line: underline;
		text-decoration-color: #fc4235;
		text-decoration-thickness: 10px;
	}

	p {
		color: var(--secondary-background-color);
		font-family: "Akkurat";
		font-size: 32px;
		text-align: center;
	}
	
	#link-wrapper {
		margin-top: 42px;
		display: flex;
		gap: 32px;
	}

	a {
		background-color: var(--secondary-background-color);
		color: var(--heading-color);
		font-family: "Harmonia Sans";
		font-size: 30px;
		text-align: center;
		padding: 20px 40px;
		border-radius: 50cqh;
	}

	a:hover {
		background-color: white;
		color: var(--primary-background-color);
	}

</style>